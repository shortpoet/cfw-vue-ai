{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    // Doesn't apply to server/, see ts-node config down below and server/tsconfig.json
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "WebWorker"
    ],
    "types": [
      "vite/client",
      "node",
      "@vueuse/core",
      "pinia",
      "vike"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ],
  },
  "ts-node": {
    "esm": true,
    // "transpileOnly": true,
    "compilerOptions": {
      // "target": "ESNext",
      // "module": "ESNext",
      "types": [
        "vite/client",
        "node",
      ],
    }
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "vite.config.ts",
    "vue.d.ts",
    "../bindings.d.ts"
  ]
}