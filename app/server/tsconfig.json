{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": true,
    "lib": [
      "esnext"
    ],
    "types": [
      "@types/node",
    ],
    "typeRoots": [
      "node_modules"
    ]
  },
  "include": [
    "**/*.ts",
    "../bindings.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}